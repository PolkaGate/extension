    "@sentry/webpack-plugin": "^2.22.6",
    "@substrate/connect": "^0.7.32",
    "@vaadin/icons": "^23.2.3",
    "babel-plugin-transform-import-meta": "^2.1.1",
    "better-react-spinkit": "^2.0.4",
    "chance": "^1.1.11",
    "chart.js": "^4.2.1",
    "country-flag-icons": "^1.5.9",
    "css-loader": "^6.7.3",
    "framer-motion": "^11.11.13",
    "memoize-one": "^6.0.0",
